>D
;L&G 360 ebs

rBlink=0
d=750
bu=0
noWifi=0
; define pins
rL=6
gL=5
bL=7
butA=9

; -- ARRAYS --
M:arrPT=0 480
M:p:arrMon=0 31

; -- VARS --
avgPT=0 
avgCnt=0
sPT="cnth0/120"
p:vH=0
p:vHCnt=0
p:vDay=0
curDay=0


>B
->setOption55 1
->sensor53 r
is(0 "Jan|Feb|Mär|Apr|Mai|Jun|Jul|Aug|Sep|Okt|Nov|Dez|")

;configure GPIO
spinm(rL O)
spinm(gL O)
spinm(bL O)
spinm(butA P)

>BS
; lightshow at startup
spin(rL 1)
delay(d)
spin(gL 1)
; r + g = y
delay(d)
spin(rL 0)
delay(d)
spin(gL 0)
spin(bL 1)
delay(d)
spin(bL 0)

>M 1
+1,4,o,0,115200

1,=h<h3>Leistung</h3>
