>S
; if no wifi connection after 10 sec, blink red
if wifis==0 {
  noWifi+=1
}
if noWifi>10 {
  rBlink=3
}

if pin[butA]==0 {
  bu+=1
}
if bu>2 {
  rBlink=1
  bu=0
}

if (year<2020)
{
	print NTP not ready
	break
}

; every 3s
if (secs%3==0)
{
	avgPT+=sml[4]
	avgCnt+=1
}

; every 30s
if (secs%30==0)
{
	; 4h chart. idx is set automatically
	arrPT=avgPT/avgCnt
	sPT="cnth"+s(1.0((((hours+20)*120)+(mins*2)+(int(secs/30)))%2880+1))+"/120"
	vH+=avgPT/avgCnt
	vHCnt+=1
	avgPT=0
	avgCnt=0
}
if (secs%10==0)
{
	vDay+=vH/vHCnt
	vH=0
	vHCnt=0
}
if (secs%60==0)
{
	
	arrMon[curDay]=vDay
	vDay=0
	curDay+=1
}
>F
; every 100 ms

; blink green on (1·7) reception
if smlv[2]==1 {
  spin(gL 1)
  smlv[0]
} else {
  spin(gL 0)
}

if rBlink>0 {
  spin(rL 1)
  rBlink-=1
  noWifi=0
} else {
  spin(rL 0)
}

